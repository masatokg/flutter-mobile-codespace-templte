{
  "name": "Flutter Firebase DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {},
    "ghcr.io/devcontainers/features/chromium:1": {},
    "ghcr.io/devcontainers/features/firefox:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "bash",
        "editor.formatOnSave": true
      },
      "extensions": [
        "dart-code.flutter",
        "dart-code.dart-code",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack"
      ]
    }
  },
  "remoteUser": "vscode",
  "postStartCommand": "git config --global --add safe.directory /home/vscode/flutter",
  "postCreateCommand": "flutter doctor --android-licenses && git config --global --add safe.directory /home/vscode/flutter"
  // .devcontainer/devcontainer.json の末尾付近
}